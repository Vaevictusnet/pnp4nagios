[Unit]
Description=npcd rrd processor for pnp4nagios
Documentation=https://github.com/pnp4nagios/docs
After=network.target local-fs.target

[Service]
Type=exec
User=@nagios_user@
Group=@nagios_grp@
PIDFile=@PIDDIR@/npcd.pid
Environment="CONFIG_FILE=@SYSCONFDIR@/npcd.cfg"
ExecStart=@BINDIR@/npcd -d -f ${CONFIG_FILE}
#ExecStop=/bin/kill -s QUIT $MAINPID

[Install]
WantedBy=nagios.service
