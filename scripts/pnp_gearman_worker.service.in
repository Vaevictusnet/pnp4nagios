[Unit]
Description=gearman rrd processor for pnp4nagios
Documentation=https://github.com/pnp4nagios/docs
After=network.target local-fs.target

[Service]
Type=exec
User=@nagios_user@
Group=@nagios_grp@
PIDFile=@PIDDIR@/gearman_worker.pid
Environment="CONFIG_FILE=@SYSCONFDIR@/process_perfdata.cfg"
ExecStart="@libexecdir@/process_perfdata.pl  --config=${CONFIG_FILE} --gearman --daemon --pidfile=@PIDDIR@/gearman_worker.pid"
ExecStop=/bin/kill -s QUIT "$MAINPID"

[Install]
WantedBy=nagios.service
